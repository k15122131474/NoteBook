<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jike.dao.AccountInfoDao">
	<select id="getById" resultType="AccountInfo" parameterType="Integer">
		select
		*
		from tb_accountinfo
		where id = #{id}
	</select>
	<select id="getByAccount" resultType="AccountInfo"
		parameterType="String">
		select
		*
		from tb_accountinfo
		where account = #{account}
	</select>
	<insert id="insertAccountInfo" parameterType="AccountInfo">
		insert
		into tb_accountinfo(name,account,password)
		values(#{name},#{account},#{password})
	</insert>
	<update id="updateAccountInfo" parameterType="AccountInfo">
		update tb_accountinfo set
		<if test="password!=null and password!=''"> password=#{password}</if>
		<if test="name!=null and name!=''"> name=#{name}</if>
		where id=#{id}
	</update>
</mapper>